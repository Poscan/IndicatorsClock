<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClockOnTheIndicators.View.IndicatorComponent">
    <Grid ColumnDefinitions="*, 4*, *"
          RowDefinitions="*, 4*, *, 4*, *"
          ColumnSpacing="0"
          RowSpacing="0"
          x:Name="Indicator">
        <BoxView Grid.Column="1" Grid.Row="0" />
        <BoxView Grid.Column="2" Grid.Row="1" />
        <BoxView Grid.Column="2" Grid.Row="3" />
        <BoxView Grid.Column="1" Grid.Row="4" />
        <BoxView Grid.Column="0" Grid.Row="3" />
        <BoxView Grid.Column="0" Grid.Row="1" />
        <BoxView Grid.Column="1" Grid.Row="2" />
    </Grid>
</ContentView>